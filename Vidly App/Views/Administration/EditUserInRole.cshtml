@model List<Vidly_App.ViewModel.UserRoleViewModel>;

@{
    var roleId = ViewBag.roleId;
}

@using (Html.BeginForm("EditUserInRole", "Administration", FormMethod.Post))
{
    <div class="card">
        <div class="card-header">
            <h3>Add or Remove Users from this Role</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                Update
            </button>
            <a class="btn btn-primary"
               asp-controller="Administration"
               asp-action="EditRole"
               asp-route-Id="@roleId">
                Cancel
            </a>
        </div>
    </div>
}
